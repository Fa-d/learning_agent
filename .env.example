# VizLearn API - Environment Configuration Template
# Copy this file to .env and configure the values

# Application Configuration
APP_NAME=VizLearn API
APP_VERSION=1.0.0
DEBUG=false

# Server Configuration
HOST=0.0.0.0
PORT=8000

# LLM Configuration
# For local development (when running directly on host):
LLM_BASE_URL=http://localhost:1234/v1
# For Docker development (when running in container):
# LLM_BASE_URL=http://host.docker.internal:1234/v1
LLM_API_KEY=sk-not-needed
LLM_MODEL=local-model
LLM_TIMEOUT=30.0
LLM_MAX_RETRIES=2

# Authentication
STATIC_API_KEY=vizlearn-static-key-2025

# CORS Configuration (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:8080

# Search Configuration
ENABLE_WEB_SEARCH=true
SEARCH_MAX_RESULTS=5
SEARCH_TIMEOUT=10.0

# Content Generation Limits
MAX_QUESTIONS_PER_REQUEST=20
DEFAULT_QUESTIONS_COUNT=5
